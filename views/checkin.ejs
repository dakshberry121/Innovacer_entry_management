<div class=" jumbotron col-md-8 col-md-offset-2" >
<form class="form-horizontal" ng-submit="checkin(user)">
 <div class="form-group">
  <label class="col-md-3 control-label">Guest Name</label>  
    <div class="col-md-9 inputGroupContainer">
    <div class="input-group">
        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
  <input placeholder="Full Name" class="form-control"  ng-model="user.gname" type="text" required>
    </div>
  </div>
</div>
  
  <div class="form-group">
  <label class="col-md-3 control-label">Guest E-Mail</label>  
    <div class="col-md-9 inputGroupContainer">
    <div class="input-group">
        <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
  <input placeholder="E-Mail Address" class="form-control"  type="email" ng-model="user.gemail" required>
    </div>
  </div>
</div>
<div class="form-group">
  <label class="col-md-3 control-label">Guest Contact</label>  
    <div class="col-md-9 inputGroupContainer">
    <div class="input-group">
        <span class="input-group-addon"><i class="glyphicon glyphicon-earphone"></i></span>
  <input placeholder="(+91)" class="form-control"  type="text" ng-model="user.gnum" required>
    </div>
  </div>
</div>
<div class="form-group">
  <label class="col-md-3 control-label">Host Name</label>  
    <div class="col-md-9 inputGroupContainer">
    <div class="input-group">
        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
  <input placeholder="Full Name" class="form-control"  type="text" ng-model="user.hname" required>
    </div>
  </div>
</div>
  
  <div class="form-group">
  <label class="col-md-3 control-label">Host E-Mail</label>  
    <div class="col-md-9 inputGroupContainer">
    <div class="input-group">
        <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
  <input placeholder="E-Mail Address" class="form-control"  type="email" ng-model="user.hemail" required>
    </div>
  </div>
</div>
<div class="form-group">
  <label class="col-md-3 control-label">Host Contact</label>  
    <div class="col-md-9 inputGroupContainer">
    <div class="input-group">
        <span class="input-group-addon"><i class="glyphicon glyphicon-earphone"></i></span>
  <input placeholder="(+91)" class="form-control"  type="text" ng-model="user.hnum" required>
    </div>
  </div>
</div>
  <br>
  <div class="form-group" style=" text-align: center;">
    <div class="col-md-12 ">
      <button type="submit" class="btn btn-success btn-lg">Check In</button>
    </div>
  </div>
</form>
</div>